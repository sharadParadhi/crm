generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      =env("DATABASE_URL")
}


model User {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  name         String
  password     String
  role         Role           @default(SALES_EXEC)
  createdAt    DateTime       @default(now())
  leads        Lead[]         @relation("OwnerLeads")
  activities   Activity[]
  leadHistory  LeadHistory[]
  notifications Notification[]
}

model Lead {
  id          Int            @id @default(autoincrement())
  title       String
  company     String?
  email       String?
  phone       String?
  status      LeadStatus     @default(NEW)
  ownerId     Int?
  owner       User?          @relation("OwnerLeads", fields: [ownerId], references: [id])
  activities  Activity[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  history     LeadHistory[]
}

model Activity {
  id        Int          @id @default(autoincrement())
  leadId    Int
  lead      Lead         @relation(fields: [leadId], references: [id], onDelete: Cascade)
  type      ActivityType
  note      String?
  meta      Json?
  createdBy Int
  creator   User         @relation(fields: [createdBy], references: [id])
  createdAt DateTime     @default(now())
}

model LeadHistory {
  id        Int      @id @default(autoincrement())
  leadId    Int
  lead      Lead     @relation(fields: [leadId], references: [id], onDelete: Cascade)
  from      String?
  to        String?
  reason    String?
  changedBy Int
  changer   User     @relation(fields: [changedBy], references: [id])
  createdAt DateTime @default(now())
}

model Notification {
  id        Int            @id @default(autoincrement())
  userId    Int
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  message   String
  type      String
  read      Boolean        @default(false)
  createdAt DateTime       @default(now())
}

enum Role {
  ADMIN
  MANAGER
  SALES_EXEC
}

enum LeadStatus {
  NEW
  CONTACTED
  QUALIFIED
  LOST
  WON
}

enum ActivityType {
  NOTE
  CALL
  MEETING
  EMAIL
  STATUS_CHANGE
}
